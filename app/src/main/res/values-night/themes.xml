<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DrunkGuard" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>

        <!-- Secondary/Accent -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryContainer">@color/accent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surface -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DrunkGuard.Headline</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DrunkGuard.Body</item>

        <!-- Components -->
        <item name="materialButtonStyle">@style/Widget.DrunkGuard.Button</item>
        <item name="textInputStyle">@style/Widget.DrunkGuard.TextInput</item>
    </style>

    <style name="TextAppearance.DrunkGuard.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DrunkGuard.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Widget.DrunkGuard.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.DrunkGuard.Button.Secondary">
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="Widget.DrunkGuard.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="Widget.DrunkGuard.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
    </style>

    <!-- Beta Banner Style -->
    <style name="BetaBanner">
        <item name="android:background">@color/beta_banner_bg</item>
        <item name="android:textColor">@color/beta_banner_text</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_xs</item>
    </style>

</resources>